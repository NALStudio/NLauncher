@using MudBlazor.Utilities

<MudImage Src="./icon.svg" Class="@(ConstructCss())" Style="@Style" />

@code {
    private string ConstructCss()
            => new CssBuilder()
                .AddClass("ma-3", Margin)
                .AddClass(Style)
                .Build();

    [Parameter]
    public bool Margin { get; set; } = true;

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Style { get; set; }
}