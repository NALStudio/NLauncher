@using MudBlazor.Utilities
<MudText Typo="Typo.h5" Class="@ConstructCss" Style="@Style">NLauncher</MudText>

<style>
    .logo-style {
        color: var(--mud-palette-text-primary)
    }
</style>

@code {
    private string ConstructCss => new CssBuilder("logo-style")
                                    .AddClass(Class)
                                    .Build();

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Style { get; set; }
}