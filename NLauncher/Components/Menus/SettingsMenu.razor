@using NLauncher.Services.Settings

@inject SettingsService Settings

<MudPopover AnchorOrigin="Origin.BottomRight"
            TransformOrigin="Origin.TopRight"
            Open="@Open">
    <div class="ma-3">
        <MudSwitch
            T="bool"
            Label="@(GetDarkModeText())"
            Value="@(GetDarkMode())"
            ValueChanged="@SetDarkMode"
            ThumbIcon="@(GetDarkModeIcon())"
            UncheckedColor="Color.Warning"
            Color="Color.Dark" />
    </div>
</MudPopover>
