@if (TopDivider)
{
    <MudDivider Class="my-2" />
}

<MudStack Row Justify="Justify.SpaceBetween">
    <MudText Align="Align.Left">@Label</MudText>

    @if (ValueContent is null)
    {
        <MudText Align="Align.Right">@Value</MudText>
    }
    else
    {
        @ValueContent
    }
</MudStack>

@code {
    [Parameter, EditorRequired]
    public required string Label { get; set; }

    [Parameter]
    public string Value { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment? ValueContent { get; set; }

    [Parameter]
    public bool TopDivider { get; set; } = true;

    // [Parameter]
    // public bool BottomDivider { get; set; } = false;
}
